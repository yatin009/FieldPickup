<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.webguru.fieldpickup">
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"> </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <!--<uses-permission android:name="android.permission.GET_ACCOUNTS" />-->
    <!--<uses-permission android:name="android.permission.READ_PROFILE" />-->
    <!--<uses-permission android:name="android.permission.READ_CONTACTS" />-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sap_logo_square"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity android:name=".Activities.QcResultActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity android:name=".Activities.DocketDetailsActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity android:name=".Activities.DocketUpdateActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity android:name=".Activities.ReviewActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity android:name=".Activities.EditValueActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity android:name=".Activities.StatusActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity android:name=".Activities.ImageViewActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
    </application>

</manifest>