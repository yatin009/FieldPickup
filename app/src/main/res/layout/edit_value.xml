<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/radioTypeField"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                style="@style/QCLayoutStyle">

                <TextView
                    style="@style/InputStyleNoMargin"
                    android:id="@+id/selectedRadioTypeQuestion"
                    android:text="Select Question" />

                <RadioGroup
                    android:id="@+id/selectedRadioAnswer"
                    style="@style/RadioGroupStyle">

                    <RadioButton
                        android:id="@+id/selectedYes"
                        style="@style/RadioButtonStyle"
                        android:text="YES" />

                    <RadioButton
                        android:id="@+id/selectedNo"
                        style="@style/RadioButtonStyle"
                        android:text="NO" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberTypeField"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                style="@style/QCLayoutStyle">

                <TextView
                    style="@style/InputStyleNoMargin"
                    android:id="@+id/selectedNumberTypeQuestion"
                    android:text="Select Question" />

                <Spinner
                    android:id="@+id/selectedNumberAnswer"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stringTypeField"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                style="@style/QCLayoutStyle">

                <TextView
                    style="@style/InputStyleNoMargin"
                    android:id="@+id/selectedStringTypeQuestion"
                    android:text="Select Question" />

                <EditText
                    android:id="@+id/selectedStringAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

            <View style="@style/ListDividerStyle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>




            <android.support.v7.widget.AppCompatButton
                android:id="@+id/update_field"
                style="@style/NewButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="Update" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
