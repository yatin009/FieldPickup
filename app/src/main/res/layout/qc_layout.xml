<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/qc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/DividerTextStyle"
                android:text="Quality Check Questions" />
        </LinearLayout>

        <LinearLayout
            style="@style/QCLayoutStyle">

            <TextView
                style="@style/InputStyleNoMargin"
                android:text="1. Same product received ?" />

            <RadioGroup
                android:id="@+id/is_same_product"
                style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/is_same_product_yes"
                    style="@style/RadioButtonStyle"
                    android:text="YES" />

                <RadioButton
                    android:id="@+id/is_same_product_no"
                    style="@style/RadioButtonStyle"
                    android:text="NO" />
            </RadioGroup>

        </LinearLayout>
        <View style="@style/ListDividerStyle" />

        <LinearLayout
            style="@style/QCLayoutStyle">

            <TextView
                style="@style/InputStyleNoMargin"
                android:text="2. Quantity" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/quantity"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/product_quantity"
                    style="@style/InputStyle"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <View style="@style/ListDividerStyle" />

        <LinearLayout
            style="@style/QCLayoutStyle">

            <TextView
                style="@style/InputStyleNoMargin"
                android:text="3. All accessories/parts available ?"/>

            <RadioGroup
                android:id="@+id/is_all_parts_available"
                style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/is_all_parts_available_yes"
                    style="@style/RadioButtonStyle"
                    android:text="YES" />

                <RadioButton
                    android:id="@+id/is_all_parts_available_no"
                    style="@style/RadioButtonStyle"
                    android:text="NO" />
            </RadioGroup>

        </LinearLayout>
        <View style="@style/ListDividerStyle" />

        <LinearLayout
            style="@style/QCLayoutStyle">

            <TextView
                style="@style/InputStyleNoMargin"
                android:text="4. Issue Category is Correct ?"/>

            <RadioGroup
                android:id="@+id/is_correct_issue_category"
                style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/is_correct_issue_category_yes"
                    style="@style/RadioButtonStyle"
                    android:text="YES" />

                <RadioButton
                    android:id="@+id/is_correct_issue_category_no"
                    style="@style/RadioButtonStyle"
                    android:text="NO" />
            </RadioGroup>

        </LinearLayout>
        <View style="@style/ListDividerStyle" />

        <LinearLayout
            style="@style/QCLayoutStyle">

            <TextView
                style="@style/InputStyleNoMargin"
                android:text="5. Product is dirty/used ?"/>

            <RadioGroup
                android:id="@+id/is_dirty"
                style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/is_dirty_yes"
                    style="@style/RadioButtonStyle"
                    android:text="YES" />

                <RadioButton
                    android:id="@+id/is_dirty_no"
                    style="@style/RadioButtonStyle"
                    android:text="NO" />
            </RadioGroup>

        </LinearLayout>
        <View style="@style/ListDividerStyle" />

        <LinearLayout
            style="@style/QCLayoutStyle">

            <TextView
                style="@style/InputStyleNoMargin"
                android:text="6. Remarks"/>

            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>
        <View style="@style/ListDividerStyle" />

        <LinearLayout
            style="@style/QCLayoutStyle">

            <TextView
                style="@style/InputStyleNoMargin"
                android:text="7. Image"
                android:maxLines="2"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/image"
                style="@style/ImageButtonStyle"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Capture Image 1" />

            <ImageView
                android:id="@+id/capturedImage"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </LinearLayout>
        <View style="@style/ListDividerStyle" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/update_docket"
            style="@style/NewButtonStyle"
            android:layout_marginTop="15dp"
            android:text="Submit" />

    </LinearLayout>
</LinearLayout>
