<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="ImageButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/cpb_blue</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="InputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/cpb_grey</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/main_color_grey_500</item>
    </style>

    <style name="InputStyleNoMargin" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/monsoon</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioGroupStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="QCLayoutStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LabelStyleNoMargin" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">.70</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>

    </style>

    <style name="SubLabelStyleNoMargin" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.30</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/monsoon</item>
        <item name="android:paddingBottom">20dp</item>
    </style>


    <style name="DividerTextStyle" parent="AppTheme">
        <item name="android:textColor">@color/jumbo</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="DividerLineStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorTeal</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    
    <style name="ListDividerStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/contentDividerLine</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>


    <style name="TitleBadgeText" parent="AppTheme">
        <item name="android:textColor">@color/monsoon</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleBadgeTitle" parent="AppTheme">
        <item name="android:textColor">@color/titleBadgeTitle</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="DetailsViewQuestion" parent="AppTheme">
        <item name="android:textColor">@color/oil</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="DetailsViewAnswer" parent="AppTheme">
        <item name="android:textColor">@color/monsoon</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="FormTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="ReviewLabelStyle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">.75</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>

    </style>

    <style name="ReviewValueStyle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">right</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.20</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/monsoon</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="ReviewEditStyle" parent="AppTheme">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/monsoon</item>
        <item name="android:paddingBottom">20dp</item>
    </style>



</resources>
